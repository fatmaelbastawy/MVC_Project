@model IEnumerable<Stor.Models.task>


<h1> All Tasks</h1>

<p>
    <a class="btn btn-primary" asp-action="Create"> Insert Task</a>
</p>


    <div class="gap-5 justify-content-center ">
        @foreach (var item in Model)
        {
            <div class="  mb-3   card-body text-center d-flex justify-content-between">
                <div class="text-start">
                     <h1 class="w-100  card-title">@Html.DisplayFor(modelItem => item.Name)</h1>
                    <h5 class=" card-text fw-bold">Description : @Html.DisplayFor(modelItem => item.Description)</h5>
                    <h5 class="fw-bold">Assign Date : @Html.DisplayFor(modelItem => item.AssignDate)</h5>
                    <h5 class="fw-bold">Status : @Html.DisplayFor(modelItem => item.Status)</h5>
                </div>
                    <div class="d-flex justify-content-evenly flex-column">
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit </a>
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details </a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete </a>
                    </div>
             </div>
           
        }
    </div>


