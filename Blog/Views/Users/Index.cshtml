@model IEnumerable<Stor.Models.User>
<h1>< All Users</h1>

<p>
    <a class="btn btn-primary" asp-action="Create"> Insert User</a>
</p>

@if(!Model.Any()){
  <div class="alert alert-warning alert-dismissible fade show" role="alert">
        No User Inserted Yet Please Insert The First User   
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
}
else
{
    <div class="gap-5 justify-content-center ">
        @foreach (var item in Model)
        {
            <div style="min-height:170px" class= "p-3  mb-3   card-body text-center d-flex justify-content-between">
                <div class="text-start">
                    <h3 class="w-100  card-title">User Name :  @Html.DisplayFor(modelItem => item.Name)</h3>
                    <h5 class=" card-text fw-bold">Email : @Html.DisplayFor(modelItem => item.Email)</h5>
                </div>
                <div class="d-flex justify-content-around flex-column">
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit </a>
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details </a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </div>
            </div>

        }
    </div>
} 
