@model IEnumerable<Stor.Models.TaskCategory>

<h1>Task Categories</h1>

<p>
    <a class="btn btn-primary" asp-action="Create"> Inset Task Category</a>
</p>




    <div class="row gap-5 justify-content-between ">
        
    
        
            <div class="gap-5 justify-content-center " >
                @foreach (var item in Model)
                {
                    <div style="min-height:170px" class="flex-column p-0 mb-3   card-body text-center d-flex justify-content-between">
                        <div class="text-start">
                            <h1 class="w-100 ps-3 pt-3  card-title">Category: @Html.DisplayFor(modelItem => item.CategoryName)</h1>
                        </div>
                        <div class="d-flex  pe-3 justify-content-center flex-row">
                            <a class="btn btn-primary me-1" asp-action="Edit" asp-route-id="@item.Id">Edit </a>
                            <a class="btn btn-primary me-1" asp-action="Details" asp-route-id="@item.Id">Details </a>
                            <a class="btn btn-danger me-1" asp-action="Delete" asp-route-id="@item.Id">Delete </a>
                        </div>
                    </div>

                }
            </div>
        

    </div>

